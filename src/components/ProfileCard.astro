---
const { imageUrl, name, role } = Astro.props;
---

<div class="profile-card" tabindex="0">
  <img src={imageUrl} alt={[name, role].join(" ")} />
  <div class="description">
    <p>{role}</p>
    <h3>{name}</h3>
  </div>
</div>

<style>
  .profile-card {
    box-shadow: 0 1px 5px rgba(104, 104, 104, 0.8);
  }

  .profile-card img {
    width: 100%;
  }

  .description {
    margin: 1rem;
    margin-top: 0.5rem;
  }

  .description > * {
    margin: 0;
    font-weight: 400;
  }

  .description p {
    font-size: 0.9rem;
    color: #555;
  }

  .profile-card:focus {
    animation: bounce 1s 1;
  }

  .profile-card:active {
    animation: none;
  }

  @keyframes bounce { 
    0%, 30%, 60% {transform: translateY(0);} 
    20% {transform: translateY(-30px);} 
    50% {transform: translateY(-15px);} 
  }
</style>
